# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /students                   controllers.Student.index()     
GET     /students/:studentId        controllers.Student.details(studentId: String)
POST    /students                   controllers.Student.newStudent()
DELETE  /students/:studentId        controllers.Student.delete(studentId: String)  

GET     /books                      controllers.Book.index()     
GET     /books/:bookId              controllers.Book.details(bookId: String)
POST    /books                      controllers.Book.newBook()
DELETE  /books/:bookId              controllers.Book.delete(bookId: String)  

GET     /condition                  controllers.Condition.index()     
POST    /condition                  controllers.Condition.newCondition()
DELETE  /condition/:name            controllers.Condition.delete(name: String)  



GET     /offers                     controllers.Offer.index()     
GET     /offers/:studentId          controllers.Offer.details(studentId: String)
GET     /offers/:studentId/:bookId  controllers.Offer.offerDetails(studentId: String,bookId: String)
POST    /offers                     controllers.Offer.newOffer()
DELETE  /offers/:offerId            controllers.Offer.delete(offerId: String)  


GET     /requests                     controllers.CurrentRequest.index()     
GET     /requests/:studentId          controllers.CurrentRequest.details(studentId: String)
GET     /requests/:studentId/:bookId  controllers.CurrentRequest.offerDetails(studentId: String,bookId: String)
POST    /requests                     controllers.CurrentRequest.newOffer()
DELETE  /requests/:primaryKey         controllers.CurrentRequest.delete(primaryKey: String)  